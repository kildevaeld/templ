{
  "compilerOptions": {
    "target": "es2015",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "module": "commonjs",
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "preserveConstEnums": false
  },
  "filesGlob": [
    "./src/*.ts",
    "./**/*.tsx",
    "!./node_modules/**/*"
  ],
  "files": [
    "src/binding.ts",
    "src/index.ts",
    "src/parser.ts",
    "src/repository.ts",
    "src/transpiler.ts",
    "src/utils.ts",
    "src/view.ts",
    "src/attributes/base.ts",
    "src/attributes/event.ts",
    "src/attributes/focus.ts",
    "src/attributes/index.ts",
    "src/attributes/style.ts",
    "src/attributes/value.ts",
    "src/components/component.ts",
    "src/components/index.ts",
    "src/components/repeat.ts",
    "src/modifiers/index.ts",
    "src/vnode/comment.ts",
    "src/vnode/dynamic.ts",
    "src/vnode/element.ts",
    "src/vnode/fragment.ts",
    "src/vnode/fragmentsection.ts",
    "src/vnode/index.ts",
    "src/vnode/nodesection.ts",
    "src/vnode/section.ts",
    "src/vnode/template.ts",
    "src/vnode/text.ts",
    "src/vnode/view.ts",
    "src/vnode/vnode.ts"
  ]
}